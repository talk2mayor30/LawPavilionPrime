<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/authItemlyt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="20dp"
        android:background="@drawable/selector_360"
        android:onClick="authoritySelected"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/authority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="16dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="First Authority"/>

            <TextView
                android:id="@+id/relyCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#097720"
                android:layout_gravity="bottom"
                android:textStyle="italic"
                android:textSize="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Relies on this principle"/>
        </LinearLayout>

        <TextView
            android:id="@+id/LA_LC"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="Locus Classicus"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="#FF9800"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>

</LinearLayout>